<style type="text/css">
    input.ng-invalid.ng-touched {
        background-color: #FA787E;
    }
</style>

<section id="contact" data-ng-controller="EmailCtrl as vm">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contact Us</h2>
                <h3 class="section-subheading text-muted">For your next Staffing Recruitment please contact us by Telephone or Email</h3>
            </div>
        </div>
        <div class="row" data-ng-if="!vm.Sent">
            <div class="col-lg-12">
                <form name="sendMessage" novalidate id="contactForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="name" placeholder="Your Name *" id="name" data-ng-model="vm.Msg.Name" required data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" placeholder="Your Email *" id="email" data-ng-model="vm.Msg.ReplyEmail" required data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" name="tel" placeholder="Your Phone *" id="phone" data-ng-model="vm.Msg.Tel">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" name="enquiry" placeholder="Enquiry *" id="message" data-ng-model="vm.Msg.Enquiry" required data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>

                            <button type="button" data-ng-click="vm.Send(sendMessage.name.$valid && sendMessage.email.$valid && sendMessage.enquiry.$valid)" class="btn btn-xl">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-12 text-center callemail">
                <i class="fa fa-phone"></i><a href="tel:01234567890"> 0203 7453310</a>
                <i class="fa fa-envelope-o"></i><a href="mailto:info@finnesseconsulting.co.uk"> info@finnesseconsulting.co.uk</a>
            </div>
        </div>
        <div class="row" data-ng-if="vm.Sent">
            <div class="col-lg-12">
                <article class="text-center">
                    <h2>Thanks for getting in touch.</h2>

                    <div class="col-lg-12 text-center callemail">
                        <i class="fa fa-phone"></i><a href="tel: @Constants.Tel"> @Constants.Tel</a>
                        <i class="fa fa-envelope-o"></i><a href="mailto:info@finnesseconsulting.co.uk"> info@finnesseconsulting.co.uk</a>
                    </div>
                    <div class="clearfix"></div>
                </article>
            </div>
        </div>
    </div>
</section>